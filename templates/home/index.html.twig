                <div>
                    <img src="{{ asset('images/person/testimonial.png') }}" alt="">
                    <p>Dr. Thomas Bernard</p>
                    <p>Chirurgien</p>
                </div>
            </article>
        </section>
        <section>
            <h3>Rencontrez nos experts</h3>
            <article>
                <div>
                    <img src="{{ asset('images/person/emilieLaurent.png') }}" alt="Photo du docteur Emilie Laurent">
                </div>
