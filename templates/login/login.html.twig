{% extends 'base.html.twig' %}

{% block title %}IRM Assist - Connexion{% endblock %}

{% block body %}
    <form method="post" action="{{ path('login') }}">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}

        <h1 class="text-3xl text-[#1B3C74] text-center font-bold my-6">Connexion</h1>
        <section class="w-3/4 m-auto bg-[#E8F1FF] p-12 rounded-lg">
                <div>
                    <label for="username">Adresse e-mail</label><br>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div>
                    <label for="password">Mot de passe</label><br>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
<br>
        <button class="btn btn-primary bg-gradient-to-r from-[#3A8EF6] to-[#4896F8] rounded-full text-white py-3 px-3.5 my-3" type="submit">
            Connexion
        </button>

        <div class="mt-3">
            Pas encore de compte ? Inscrivez-vous 
            <a class="text-[#1678F2] underline" href="{{ path('app_register') }}">ici</a>
        </div>
        </section>
    </form>
{% endblock %}
